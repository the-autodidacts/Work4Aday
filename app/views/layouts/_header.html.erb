<style>
*{
  text-align: center;
}

.workheader span{
  color: #FFF100;
}
</style>

  <div class="container">
    <h1 class="workheader">WORK <span>4</span> A DAY</h1>

    <%if current_user %>
    <div class="row">
      <div class="one-third column label"><a href="#">Look 4 Work</a></div>
      <div class="one-third column label"><a href="#"><%=current_user.first_name.capitalize%>, Messages </a></div>
      <div class="one-third column label"><a href="#">Look 4 Workers</a></div>
    </div>

    <%end%>
    <%if current_user %>
    <form action="<%= session_path %>" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Log out">
    </form>
    <%end%>
  </div>
